{
	"compilerOptions": {
		// 루트 경로 설정 - 상대경로 계산 기준
		"rootDir": "./",

		// 최신 JS 문법 사용
		"target": "esnext",
		"module": "esnext",

		// 브라우저와 최신 JS 기능 사용 설정
		"lib": ["dom", "esnext"],

		// JS 파일도 컴파일 허용
		"allowJs": true,

		// 타입 정의 파일의 유효성 검사 생략 (빌드 속도 향상)
		"skipLibCheck": true,

		// CommonJS ↔ ESModule 간 호환성 개선
		"esModuleInterop": true,
		"allowSyntheticDefaultImports": true,

		// 엄격한 타입 체크 활성화
		"strict": true,

		// 파일 이름 대소문자 일관성 강제
		"forceConsistentCasingInFileNames": true,

		// switch문에서 fallthrough 방지
		"noFallthroughCasesInSwitch": true,

		// Node.js 스타일 모듈 해석 사용
		"moduleResolution": "node",

		// JSON 파일 import 가능하게 설정
		"resolveJsonModule": true,

		// 각 파일을 독립적인 모듈로 취급 (vite 등에서 필수)
		"isolatedModules": true,

		// 실제 js 결과물은 생성하지 않음 (ts → js 변환 생략, 번들링)
		"noEmit": true,

		// React JSX 변환 방식 (React 17+)
		"jsx": "react-jsx",

		"paths": {
			"@styles/*": ["packages/styles/*"]
		}
	}
}
